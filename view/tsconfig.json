{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    //"skipLibCheck": true, //this is a workaround, should be  removed  when possible
    "lib": ["esnext", "dom"]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
